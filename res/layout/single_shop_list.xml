<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

<!--      android:background="@drawable/transparent"> -->
    <!-- android:background="#f0f0f0" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/post_border_style"
        >

        <LinearLayout
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/list_onclick"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/post_background_style"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/list_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/list_mall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/floor_image"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/list_shop_name"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Mall Name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/list_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/list_mall"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/list_image"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Shop Name"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/floor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/text"
                    android:layout_alignBottom="@+id/text"
                    android:layout_toLeftOf="@+id/text_shop_no"
                    android:layout_toRightOf="@+id/text"
                    android:text="G" />
                <!-- android:paddingLeft="5dp" -->

                <ImageView
                    android:id="@+id/floor_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/text"
                    android:layout_toRightOf="@+id/list_image"
                    android:paddingLeft="8dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/floorsicon" />

                <TextView
                    android:id="@+id/list_shop_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/floor"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/text_shop_no"
                    android:text="55" />

   

                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/list_image"
                    android:layout_below="@+id/list_image" />

                <ImageView
                    android:id="@+id/offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/list_shop_name"
                    android:src="@drawable/tag"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/text_shop_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/list_shop_no"
                    android:layout_alignBottom="@+id/list_shop_no"
                    android:layout_toLeftOf="@+id/offer"
                    android:paddingLeft="5dp"
                    android:text="Shop no. :" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ratingBar1"
                    android:layout_toRightOf="@+id/floor_image"
                    android:paddingLeft="2dp"
                    android:text="Floor-Level:" />

                <TextView
                    android:id="@+id/hidden_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                  <TextView
                    android:id="@+id/hidden_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                    <TextView
                    android:id="@+id/hidden_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                      <TextView
                    android:id="@+id/hidden_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                          <TextView
                    android:id="@+id/hidden_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                            <TextView
                    android:id="@+id/hidden_brands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                              <TextView
                    android:id="@+id/hidden_fb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                                <TextView
                    android:id="@+id/hidden_twitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                                  <TextView
                    android:id="@+id/hidden_gplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                                  <TextView
                    android:id="@+id/hidden_imageurl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TextView"
                    android:visibility="gone" />
                                  
                                 
                                  
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>