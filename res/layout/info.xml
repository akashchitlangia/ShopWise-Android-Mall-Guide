<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
     android:scrollbars="none" >

    <RelativeLayout
        android:id="@+id/relative_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Shop Wise"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/list_divider"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:textColor="@color/list_divider"
            android:text="Version : 1.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Who we are"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/list_divider" />

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView3"
            android:background="@color/list_divider" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/who"
            android:textColor="@color/list_divider"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView5"
            
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/akash"
            android:textColor="@color/list_divider" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="center"
            android:text="@string/aditya"
            android:textColor="@color/list_divider" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/textView1"
            android:gravity="center"
            
            android:text="@string/charul"
            android:textColor="@color/list_divider" />

        <!-- <Button
            android:id="@+id/utopian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/textView51"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
     android:background="@drawable/border"     
     android:textColor="@color/list_divider"       android:padding="10dp"
     android:layout_marginBottom="10dp"
            android:text="Powered By : Utopian Solutions" /> -->

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:text="Developers"
            android:layout_marginTop="10dp"
              android:textColor="@color/list_divider"
            android:textAppearance="?android:attr/textAppearanceLarge" />
         <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView9"
            android:background="@color/list_divider" />
        
        
         
         
         
         
          <TextView
            android:id="@+id/textView91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:text="Guided By :"
            android:layout_marginTop="10dp"
              android:textColor="@color/list_divider"
            android:textAppearance="?android:attr/textAppearanceLarge" />
         <View
            android:id="@+id/line11"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView91"
            android:background="@color/list_divider" />
         
         <TextView
            android:id="@+id/textView51"
            
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line11"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Prof. Sanjay Bansal"
            android:textColor="@color/list_divider" />
        
        

    </RelativeLayout>

</ScrollView>